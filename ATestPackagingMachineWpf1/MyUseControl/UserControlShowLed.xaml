        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="16" />
        </Grid.RowDefinitions>
        <Border
            Name="Dot1"
            Grid.Row="0"
            Grid.RowSpan="2"
            Width="75"
            Height="40"
            Background="#FF21F903" />
        <Border
            Name="Dot2"
            Grid.Row="0"
            Grid.RowSpan="2"
            Canvas.Left="52"
            Canvas.Top="10"
            Width="20"
            Height="20"
            Margin="48,10,6,10"
            Background="#FF07A44A"
            CornerRadius="20" />

        <Border
            Name="Dot3"
            Grid.Row="0"
            Grid.RowSpan="2"
            Width="1"
            Height="1"
            Background="#FF21F903"
            CornerRadius="20" />
        <TextBlock
            x:Name="TextbolockName"
            Grid.Row="2"
            Canvas.Top="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Foreground="Black" />

    </Grid>
