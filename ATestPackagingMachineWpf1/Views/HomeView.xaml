<UserControl
    x:Class="ATestPackagingMachineWpf1.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:ATestPackagingMachineWpf1.Common"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:myUseControl="clr-namespace:ATestPackagingMachineWpf1.MyUseControl"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignCardGroupBox}" TargetType="GroupBox" />
    </UserControl.Resources>

  
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="运行状态">
                    <StackPanel>
                        <Canvas
                     Name="MyCanvas"
                     Width="660"
                     Height="660">
                            <GroupBox Header="数据跟踪" Visibility="Collapsed">
                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="ListBox" />

                                    </Grid.Resources>
                                    <GroupBox Header="感值1" Style="{StaticResource MaterialDesignHeaderedContentControl}">
                                        <ListBox ItemsSource="{Binding Gnzhi1QueueData}" />
                                    </GroupBox>
                                    <GroupBox
                                 Grid.Column="1"
                                 Header="感值1"
                                 Style="{StaticResource MaterialDesignHeaderedContentControl}">
                                        <ListBox ItemsSource="{Binding Gnzhi2QueueData}" />
                                    </GroupBox>
                                </Grid>


                            </GroupBox>
                            <Ellipse
                         Width="500"
                         Height="500"
                         Margin="80"
                         Fill="Transparent"
                         Stroke="Black"
                         StrokeThickness="1" />
                            <Ellipse
                         x:Name="myellipse"
                         Canvas.Left="50"
                         Canvas.Top="52"
                         Width="560"
                         Height="560"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Fill="Aqua"
                         Stroke="Black"
                         StrokeThickness="0" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="12"
                         Canvas.Top="309"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="进料"
                         Enble="False"
                         IsShowLed="False"
                         Stues="False" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="21"
                         Canvas.Top="240"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         DeviceName="校正1"
                         Enble="False"
                         IsShowLed="False"
                         Stues="True" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="49"
                         Canvas.Top="171"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="DCR1;2"
                         Enble="{Binding ListEnble[0]}"
                         Stues="{Binding BoolLedArray[0]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="99"
                         Canvas.Top="106"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="IR"
                         Enble="{Binding ListEnble[1]}"
                         Stues="{Binding BoolLedArray[1]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="189"
                         Canvas.Top="50"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="Z值测试"
                         Enble="{Binding ListEnble[2]}"
                          
                         Stues="{Binding BoolLedArray[2]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="293"
                         Canvas.Top="28"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         DeviceName="极性旋转"
                  
                         Stues="{Binding BoolLedArray[3]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="394"
                         Canvas.Top="50"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         DeviceName="校正"
                         Enble="True"
                         Stues="{Binding BoolLedArray[4]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="484"
                         Canvas.Top="106"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="DCR3;4"
                         Enble="{Binding ListEnble[3]}"
                         Stues="{Binding BoolLedArray[5]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="534"
                         Canvas.Top="171"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="感值1"
                         Enble="{Binding ListEnble[4]}"
                         RenderTransformOrigin="0.5,0.5"
                         Stues="{Binding BoolLedArray[6]}">
                                <myUseControl:UserControlShowLed.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform />
                                        <RotateTransform Angle="1.309" />
                                        <TranslateTransform />
                                    </TransformGroup>
                                </myUseControl:UserControlShowLed.RenderTransform>
                            </myUseControl:UserControlShowLed>
                            <myUseControl:UserControlShowLed
                         Canvas.Left="563"
                         Canvas.Top="240"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="感值2"
                         Enble="{Binding ListEnble[5]}"
                         Stues="{Binding BoolLedArray[7]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="572"
                         Canvas.Top="309"
                         Canvas.Right="10"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="S值"
                         Enble="{Binding ListEnble[6]}"
                         Stues="{Binding BoolLedArray[8]}" />

                            <myUseControl:UserControlShowLed
                         Canvas.Left="563"
                         Canvas.Top="379"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         DeviceName="D面相机"
                         Enble="{Binding ListEnble[7]}"
                         Stues="{Binding BoolLedArray[9]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="534"
                         Canvas.Top="450"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         DeviceName="校正"
                         Enble="True"
                         Stues="{Binding BoolLedArray[10]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="484"
                         Canvas.Top="515"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         DeviceName="B面相机"
                         Enble="True"
                         Stues="{Binding BoolLedArray[11]}" />

                            <myUseControl:UserControlShowLed
                         Canvas.Left="394"
                         Canvas.Top="572"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         DeviceName="编带前检测"
                         Enble="True"
                         Stues="{Binding BoolLedArray[12]}" />




                            <myUseControl:UserControlShowLed
                         Canvas.Left="293"
                         Canvas.Top="592"
                         Canvas.Bottom="1"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         DeviceName="编带"
                         Enble="True"
                         Stues="{Binding BoolLedArray[13]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="189"
                         Canvas.Top="572"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         DeviceName="备用"
                         Enble="True"
                         Stues="{Binding BoolLedArray[14]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="100"
                         Canvas.Top="515"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         DeviceName="备用"
                         Enble="True"
                         Stues="{Binding BoolLedArray[15]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="49"
                         Canvas.Top="450"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         DeviceName="备用"
                         Enble="True"
                         Stues="{Binding BoolLedArray[16]}" />
                            <myUseControl:UserControlShowLed
                         Canvas.Left="22"
                         Canvas.Top="379"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         DeviceName="刮料"
                         Enble="True"
                         Stues="{Binding BoolLedArray[17]}" />





                            <StackPanel
                         Canvas.Top="0"
                         Canvas.Right="270"
                         HorizontalAlignment="Left"
                         Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="总耗时" />
                                <TextBox Width="100" Text="{Binding TimeCount}" />
                            </StackPanel>









                        </Canvas>

                    </StackPanel>







                </GroupBox>
                <GroupBox Grid.Row="1" Header="日志系统">
                    <StackPanel>

                        <ScrollViewer Height="100" Margin="0,15,0,0">
                            <ListBox
                         IsSynchronizedWithCurrentItem="True"
                         ItemsSource="{Binding OperateLogList}"
                         Loaded="ListBox_Loaded">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                         Margin="0,0,15,0"
                                         materialDesign:Foreground="{Binding Path=IconColor}"
                                         materialDesign:Height="15"
                                         materialDesign:Width="15"
                                         Kind="{Binding LogIcon}" />
                                            <TextBlock
                                         VerticalAlignment="Center"
                                         FontSize="12"
                                         Text="{Binding Path=OperateInfo}" />
                                            <TextBlock
                                         Margin="15,0,0,0"
                                         VerticalAlignment="Center"
                                         FontSize="12"
                                         Text="{Binding Path=OperateTime}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <i:Interaction.Behaviors>
                                    <behavior:ListBoxScrollToBottomBehavior />
                                </i:Interaction.Behaviors>
                            </ListBox>
                        </ScrollViewer>
                    </StackPanel>
                </GroupBox>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <GroupBox Grid.Row="0" Header="Mes信息">
                    <UniformGrid Columns="1">
                        <UniformGrid.Resources>
                            <Style TargetType="StackPanel">
                                <Setter Property="Margin" Value="2" />
                                <Setter Property="Orientation" Value="Horizontal" />
                            </Style>
                            <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="TextBox">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Width" Value="249" />
                            </Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </UniformGrid.Resources>
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" Text="工单号" />
                            <TextBox Text="{Binding MesInfo.Wono}" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" Text="料号" />
                            <TextBox Text="{Binding MesInfo.Matno}" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" Text="工单数量" />
                            <TextBox Text="{Binding MesInfo.Woqty}" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" Text="包装数量" />
                            <TextBox Text="{Binding MesInfo.Packageqty}" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" Text="前空格数量" />
                            <TextBox Width="200" Text="{Binding MesInfo.FrontSpace}" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" Text="后空格数量" />
                            <TextBox Text="{Binding MesInfo.AfterSpace}" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock VerticalAlignment="Center" Text="不封膜数量" />
                            <TextBox Text="{Binding MesInfo.Blankqty}" />
                        </StackPanel>
                    </UniformGrid>


                </GroupBox>
                <GroupBox Grid.Row="1" Header="Mes系统旋转">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignDarkRadioButton}" TargetType="RadioButton">
                                <Setter Property="Command" Value="{Binding Mesbutton}" />
                                <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}" />

                            </Style>
                        </StackPanel.Resources>
                        <RadioButton
                     Margin="10"
                     Content="Mes离线"
                     GroupName="1"
                     IsChecked="{Binding MesOfflineChecked}" />
                        <RadioButton
                     Margin="10"
                     Content="Mes在线"
                     GroupName="2"
                     IsChecked="{Binding MesOnlineChecked}" />
                    </StackPanel>
                </GroupBox>
                <GroupBox Grid.Row="2" Header="机台状态旋转">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource MaterialDesignDarkRadioButton}" TargetType="RadioButton">
                                <Setter Property="Command" Value="{Binding HandAtuobutton}" />
                                <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}" />
                            </Style>
                        </StackPanel.Resources>
                        <RadioButton
                     Margin="10"
                     Content="手动"
                     IsChecked="{Binding HandChecked}" />
                        <RadioButton
                     Margin="10"
                     Content="自动"
                     IsChecked="{Binding AtuoChecked}" />
                    </StackPanel>
                </GroupBox>
                <GroupBox Grid.Row="3" Header="相机手动处理">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="StackPanel">
                                <Setter Property="Margin" Value="10" />
                            </Style>
                        </StackPanel.Resources>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="相机字符" />
                            <TextBox
                         x:Name="ccdText"
                         Width="200"
                         Text="{Binding MesInfo.MarkString}" />
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button
                         Command="{Binding SendCCD}"
                         CommandParameter="{Binding ElementName=ccdText, Path=Text}"
                         Content="字符发送" />
                            <Button
                         Command="{Binding Test2222}"
                         Content="测试"
                         Visibility="Collapsed" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" Text="相机回复" />
                            <TextBox Width="200" Text="{Binding ReplyText}" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </Grid>










        </Grid>
 
</UserControl>
